<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "courses/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">控制面板</h3>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <h4 class="text-muted">用户管理</h4>
          <hr>

          <table class="table table-striped table-hover">
            <thead>

            <tr>
              <th>课程编码</th>
              <th>课程名称</th>
              <th>课时学分</th>
              <th>限选人数</th>
              <th>已选人数</th>
              <th>授课老师</th>

              <th></th>

            </tr>
            </thead>
            <tbody>

            <% @course.each do |course| %>
                <tr>

                  <td><%= course.course_code %></td>
                  <td><%= course.name %></td>
                  <td><%= course.credit %></td>
                  <td><%= course.limit_num %></td>
                  <td><%= course.student_num %></td>
                  <td><%= course.teacher.name %></td>

                  <td><%= link_to "编辑", edit_course_url(course), class: 'btn btn-xs btn-info'%></td>

                  <td><%= link_to "删除", course_path(course), :method => "delete", class: 'btn btn-xs btn-danger',:data => {confirm: '确定要删除此课程?'} %></td>

                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


